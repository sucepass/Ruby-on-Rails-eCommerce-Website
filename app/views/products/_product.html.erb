<li>

  <%= link_to product do%>
  <% if product.picture? %>
    <%= image_tag product.picture.url %>
  <% else %>
    <%= image_tag "no_image.png", size:"150x150" %>
  <%end%>
<%end %>

<strong>
  Name :
</strong>
<%= product.name %>
,<strong>
  Description :
</strong>
<%= product.description %>
<strong>
  Price :
</strong>
<%= product.price %> $

<p>
  <%# if logged_in? %>
    <!-- Add to Basket -->
    <%= link_to line_items_path(:product_id => product.id) , class: "btn btn-warning" , style: "margin-top:15px;" do %>
    <i class="glyphicon glyphicon-plus" style="color:black;"></i>
    Add to Cart
  <% end %>
<%# end %>
</p>

<p>

<!-- Only Admin is allowed to modify products -->
<% if logged_in? && current_user.admin? %>
  <%= link_to 'Edit', edit_product_path(product) %>
  or
  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

</p>
</li>
